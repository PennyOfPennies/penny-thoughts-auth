{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmitOnError": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
		"isolatedModules": true,
    "resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"checkJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@types/node"],
    "lib": ["es2020"],
  },
  "include": [
    "src/**/*"
  ]
}