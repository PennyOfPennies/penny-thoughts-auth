{
	"name": "penny-thoughts-auth",
	"version": "1.0.0",
	"description": "Authorization lambda for Penny Thoughts",
	"main": "dist/index.js",
	"scripts": {
		"build": "webpack --config webpack.config.cjs --mode production",
		"watch": "webpack --config webpack.config.cjs --mode development --watch",
		"test": "node test/index.js",

		"_zip": "cd dist && find . -exec touch -t 202101250000 {} + && cd .. && zip -rq -D -X -9 -A --compression-method deflate ./dist.zip ./dist",
		"_sha256Zip": "openssl dgst -sha256 -binary dist.zip | openssl enc -base64",

		"build:action": "cd action && webpack --config webpack.config.cjs --mode production",
		"watch:action": "cd action && webpack --config webpack.config.cjs --mode development --watch",
		"test:action": "act -vW .github/workflows/deploy-dev.yml"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.81",
		"@types/node": "^16.3.3",
		"lambda-local": "^2.0.0",
		"serverless": "^2.52.1",
		"ts-loader": "^9.2.3",
		"typescript": "^4.3.5",
		"webpack": "^5.45.1",
		"webpack-cli": "^4.7.2"
	},
	"author": "lividlair",
	"license": "MIT",
	"dependencies": {
		"aws-lambda": "^1.0.6"
	}
}
